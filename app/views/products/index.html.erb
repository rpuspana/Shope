<div id="product-list">
  <%if @search_results %>
     <h2 style="color: green">
      <%= flash[:notice] %>
    </h2>
  <%end%>
   <%if @search_results == false%>
    <h2 style="color: green">
      <%= flash[:notice] %>
    </h2>
 <%end%>
 <% if @no_search%>
     <h1>Listing all books</h1>
 <%end%>
   <table>
      <% for product in @products %>
        <tr class="list-line">
          <td>
            <%= image_tag product.image_url, :class => 'list-image' %>
          </td>
          
          <td class="list-description">
            <dl>
              <dt><%=h product.title %></dt>
              <dd><%=h truncate(product.description,:length => 80) %></dd>
              <dd style="font-size:12px; font-weight:bold;margin-top:4px">Price : $<%=h product.price %></dd>
            </dl>
          </td>
        
        <td class="list-actions">
          <%= link_to 'Show', product %><br/>
          <%= link_to 'Edit', edit_product_path(product) %><br/>
          <%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
   </table>
</div>


<br />

<%= link_to 'Create a new book entry', new_product_path %>

<br >

  <% form_tag products_path, :method => 'get' do %>
  <h3>Search for the title of the book called
    <%= text_field_tag :search, params[:search] %>
    <!--<input id="search" name="search"  type="text"  -->
    <%= submit_tag "Go!", :name => nil %>
  </h3>
<% end %>

